<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Create table 'huawei_config' -->
    <changeSet id="create_energy_stations" author="Víctor Cañizares">
        <createTable tableName="energy_stations">
            <column name="id" type="UUID">
                <constraints primaryKey="true" primaryKeyName="energy_stations_id_pk"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="inverter_provider" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="total_power" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="connection_date" type="timestamptz"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
