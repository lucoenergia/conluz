<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.28.xsd">

    <!-- Create the supplies_tariffs table -->
    <changeSet author="Víctor Cañizares" id="create_supplies_tariffs">
        <createTable tableName="supplies_tariffs">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="supply_id" type="UUID">
                <constraints foreignKeyName="supplies_tariffs_supply_id_fk" referencedTableName="supplies"
                             referencedColumnNames="id" nullable="false"/>
            </column>
            <column name="valley" type="FLOAT" defaultValue="0.0">
                <constraints nullable="false"/>
            </column>
            <column name="peak" type="FLOAT" defaultValue="0.0">
                <constraints nullable="false"/>
            </column>
            <column name="off_peak" type="FLOAT" defaultValue="0.0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>